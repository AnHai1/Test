@model IEnumerable<OnTapKT_Lan1.Models.SinhVien>

@{
    ViewBag.Title = "Danh sách sinh viên nữ";
}

<h2>Danh sách sinh viên nữ</h2>

<!-- Bảng hiển thị danh sách sinh viên nữ -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã sinh viên</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Điểm</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Tên lớp</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSinhVien</td>
                <td>@item.HoTen</td>
                <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                <td>@item.Diem</td>
                <td>@item.DienThoai</td>
                <td>@item.Email</td>
                <td>@item.TenLop</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaSinhVien }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSinhVien }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaSinhVien })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- CSS -->
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
        color: #333;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    h2 {
        color: #333;
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>
