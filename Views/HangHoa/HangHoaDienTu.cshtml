@model IEnumerable<OnTapKT_Lan1.Models.HangHoa>

@{
    ViewBag.Title = "Danh sách hàng hóa Điện tử";
}

<h2>Danh sách hàng hóa Điện tử</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã HH</th>
            <th>Tên HH</th>
            <th>Ngày sản xuất</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Loại hàng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHangHoa</td>
                <td>@item.TenHangHoa</td>
                <td>@item.NgaySanXuat.ToString("dd/MM/yyyy")</td>
                <td>@item.DonGia</td>
                <td>@item.SoLuong</td>
                <td>@item.LoaiHang</td>
                <td>@item.ThanhTien</td>
            </tr>
        }
    </tbody>
</table>
